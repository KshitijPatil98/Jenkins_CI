{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true, // Add this line for Node.js environment
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // Additional rules for production
    "no-unused-vars": "error",
    "no-undef": "error",
    "no-extra-semi": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "camelcase": ["error", { "properties": "always" }]
    // Add more rules as needed
  }
}
